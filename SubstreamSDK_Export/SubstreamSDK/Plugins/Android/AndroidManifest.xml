<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Substream SDK Android Manifest
  Add these permissions to your main AndroidManifest.xml
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Required permissions for Substream SDK -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <application>
        <!-- Screen capture service - required for streaming -->
        <service 
            android:name="com.substream.sdk.CaptureService"
            android:foregroundServiceType="mediaProjection"
            android:exported="false" />
    </application>
    
</manifest>
